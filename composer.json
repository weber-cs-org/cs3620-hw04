{
    "name": "cs3620/hw04",
    "description": "Homework 04",
    "license": "MIT",
    "authors": [
        {
            "name": "Don Stringham",
            "email": "donstringham@weber.edu"
        }
    ],
    "autoload": {
        "psr-4":{
            "App\\": "src/",
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1",
        "guzzlehttp/guzzle": "~6.0",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "phpunit/php-invoker": "^2.0",
        "squizlabs/php_codesniffer": "^3.1",
        "fzaninotto/faker": "^1.7"
    },
    "scripts": {
        "clean": [
            "rm -f composer.lock",
            "rm -f junit.xml",
            "rm -fr vendor/"
        ],
        "fix": "vendor/bin/phpcbf --standard=PSR2 --extensions=php controllers models routes src tests",
        "push": [
            "git add .",
            "git commit -m 'Updated assignment'",
            "git push origin"
        ],
        "server": "php -S localhost:8000 -t ./src",
        "sniff": "vendor/bin/phpcs --standard=PSR2 --extensions=php src tests",
        "test": [
            "vendor/bin/phpunit"
        ]
    }
}
